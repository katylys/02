{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "name": "mocha",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}",
            "outputCapture": "std",
            "args": [
                "--timeout",
                "300000"
            ],
            "smartStep": false
        }
    ],
}